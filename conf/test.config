/*
 * -------------------------------------------------
 *  Nextflow config file for running tests
 * -------------------------------------------------
 * Defines bundled input files and everything required
 * to run a fast and simple test. Use as follows:
 *   nextflow run nf-core/slamseq -profile test
 */

params {
  // Limit resources so that this can run on Travis
  max_cpus = 2
  max_memory = 6.GB
  max_time = 48.h
  // Input data
  sampleList = 'https://github.com/nf-core/test-datasets/raw/slamseq/sampleInfo.tsv'
  fasta = 'https://github.com/nf-core/test-datasets/raw/slamseq/reference/GRCm38_chr10_subsample.fa'
  bed = 'https://github.com/nf-core/test-datasets/raw/slamseq/reference/mESC_3end_annotation_ch10.bed'
  mapping = 'https://github.com/nf-core/test-datasets/raw/slamseq/reference/mESC_UTR_annotation_ch10.bed'
  readLength = 50
}
